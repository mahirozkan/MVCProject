<!-- Bu sayfada kullanılacak modelin BookEditViewModel tipinde olduğunu belirtir. -->
@model BookEditViewModel
@{
    ViewBag.Title = "Edit Book";
}

<h2>Edit Book</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control">
        <div class="form-text text-danger">
            <span asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Genre" class="form-label"></label>
        <input asp-for="Genre" class="form-control">
        <div class="form-text text-danger">
            <span asp-validation-for="Genre"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="AuthorId" class="form-label">Author</label>
        <select asp-for="AuthorId" class="form-control">
            <!-- ViewBag içinde bulunan yazar listesini döngüyle alır. -->
            @foreach (var author in ViewBag.Authors as IEnumerable<SelectListItem>)
            {
                <!-- Yazar seçeneklerini oluşturur. -->
                <option value="@author.Value" selected="@author.Selected">@author.Text</option>
            }
        </select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label"></label>
        <input type="date" asp-for="PublishDate" class="form-control" />
        <span asp-validation-for="PublishDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ISBN" class="form-label"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CopiesAvailable" class="form-label"></label>
        <input type="number" asp-for="CopiesAvailable" class="form-control" />
        <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button> <!-- Formu kaydetmek için "Save" butonu -->
    <a class="btn btn-secondary" asp-action="List">Cancel</a> <!-- Formu kaydetmek için "Save" butonu -->
</form>
