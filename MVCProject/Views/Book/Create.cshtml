<!-- Bu sayfada kullanılacak modelin BookCreateViewModel tipinde olduğunu belirtir. -->
@model BookCreateViewModel

@{
    ViewData["Title"] = "Create Book";
}

<h2>Create Book</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>

    <div class="form-group">
        <label for="AuthorId">Author</label>
        <select class="form-control" id="AuthorId" name="AuthorId" required>
            <!-- Eğer ViewBag'de yazarlar varsa -->
            @if (ViewBag.Authors != null) 
            {
                <!-- Yazarları ViewBag'den alıp döngüyle listele -->
                @foreach (var author in ViewBag.Authors as SelectList)
                {
                    <option value="@author.Value">@author.Text</option>
                }
            }
            else
            {
                <!-- Eğer yazar yoksa, "No authors available" mesajı gösterilir. -->
                <option value="">No authors available</option>
            }
        </select>
    </div>

    <div class="form-group"> <!-- Tür (genre) için form öğesi -->
        <label for="Genre">Genre</label> <!-- Tür alanı için etiket -->
        <input type="text" class="form-control" id="Genre" name="Genre" required /> <!-- Tür için metin giriş alanı -->
    </div>

    <div class="form-group">
        <label for="PublishDate">Publish Date</label>
        <input type="date" class="form-control" id="PublishDate" name="PublishDate" required />
    </div>

    <div class="form-group">
        <label for="ISBN">ISBN</label>
        <input type="text" class="form-control" id="ISBN" name="ISBN" required />
    </div>

    <div class="form-group">
        <label for="CopiesAvailable">Copies Available</label>
        <input type="number" class="form-control" id="CopiesAvailable" name="CopiesAvailable" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Book</button> <!-- Kitap eklemek için formu gönderme butonu -->
    <a class="btn btn-secondary" asp-action="List">Cancel</a> <!-- Formu iptal edip listeye dönmek için "Cancel" butonu -->
</form>
